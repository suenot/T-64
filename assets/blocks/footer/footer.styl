footer.footer
	height: 130px
	background-color: #343434
	@media (max-width: $screen-sm-min)
		height: 145px
	.container
		.footer-wrap
			height: 130px
			display: flex
			.footer-blocks
				align-self: center
				height: 53px
				width: 100%
				position: relative
				// TODO: зачем две буквы p в wrapp
				.icon-wrapp
					position: absolute
					top: 7px
					left: 0
					@media (max-width: $screen-sm-min)
						right: auto !important
						top: auto !important
						bottom: -35px !important
						width: 100%
					.icons
						width: 129px
						@media (max-width: $screen-sm-min)
							margin: 0 auto
						img
							display: inline-block
							border-radius: 50%
							height: 30px
							width: 30px
							border: 1px solid white
							color: white
							text-align: center
							padding-top: 8px
							margin-left: 13px
							transition: all .5s
							&:hover
								color: #343434
								background-color: white
				.logo
					display: block
					width: 174px
					height: 53px
					margin: 0 auto