header.header
	height: 125px
	@media (max-width: $screen-sm-min)
		height: 140px
	.container
		.header-wrap
			height: 125px
			display: flex
			.header-blocks
				align-self: center
				width: 100%
				height: 53px
				position: relative
				.logo
					display: block
					width: 174px
					height: 53px
					margin: 0 auto
				.icon-wrap
					position: absolute
					right: 0
					top: 7px
					@media (max-width: $screen-sm-min)
						right: auto
						top: auto
						bottom: -35px
						width: 100%
					.icons
						width: 129px
						@media (max-width: $screen-sm-min)
							margin: 0 auto
						img
							display: inline-block
							border-radius: 50%
							height: 30px
							width: 30px
							box-shadow: 0px 0px 0px 1px rgba(235,235,235,1)
							color: #43a6c7
							text-align: center
							padding: 4px 8px
							margin-left: 13px
							transition: all .5s
							&:hover
								color: white
								background-color: #43a6c7
								box-shadow: none