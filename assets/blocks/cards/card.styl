.card
	width: 31%
	margin-bottom: 30px
	position: relative
	overflow: hidden
	&:hover > .info-block
		opacity: 1
		top: 10px
	&:hover > h3
		top: 22%
	&:hover > p.text
		bottom: 56%
	&:hover > .button-wrap
		opacity: 1
		bottom: 30%
	&:hover > a
		background-color: rgba(0,0,0,.7)
	a
		display: block
		background-color: rgba(0,0,0,.3)
		width: 100%
		transition: all .5s
		img
			width: 100%
			display: block
			position: relative
			z-index: -10
	h3
		position: absolute
		margin: 0
		top: 38%
		width: 100%
		text-align: center
		font-size: 30px
		text-transform: uppercase
		z-index: 10
		overflow: hidden
		transition: all .5s
	p.text
		position: absolute
		margin: 0
		bottom: 40%
		width: 100%
		text-align: center
		font-size: 13px
		text-transform: uppercase
		z-index: 10
		transition: all .5s
	.button-wrap
		position: absolute
		width: 100%
		height: 40px
		bottom: -30%
		opacity: 0
		transition: all .5s
		a.button-watch
			display: block
			height: 40px
			width: 120px
			border: 2px solid #ff5541
			border-radius: 5px
			font-size: 14px
			text-transform: uppercase
			text-align: center
			padding-top: 8px
			color: white
			z-index: 30
			cursor: pointer
			margin: 0 auto
			transition: all .5s
			&:hover
				background-color: #ff5541
	.info-block
		position: absolute
		top: -20px
		left: 10px
		height: 23px
		width: 70px
		border-radius: 5px
		font-size: 13px
		text-transform: uppercase
		line-height: 23px
		text-align: center
		opacity: 0
		transition: all .5s
	.sale
		background-color: #fc5440
		background-image: repeating-linear-gradient(-45deg, transparent, transparent 2px, #df4736 2px, #df4736 4px)
	.new
		background-color: #00bcfd
		background-image: repeating-linear-gradient(-45deg, transparent, transparent 2px, #02ace7 2px, #02ace7 4px)
	.hot
		background-color: #b0c549
		background-image: repeating-linear-gradient(-45deg, transparent, transparent 2px, #a4bb38 2px, #a4bb38 4px)