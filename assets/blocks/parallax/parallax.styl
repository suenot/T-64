.parallax
	background-image: url('/img/parallax/parallax.webp')
	background-position: center top
	background-repeat: no-repeat
	background-attachment: fixed
	height: 490px
	position: relative
	overflow: hidden
	@media (max-width: $screen-phone-min)
		height: 300px
	&:before
		display: block
		content: ''
		height: 100%
		width: 100%
		background-color: black
		opacity: 0.3
	&__afterAnimation1, &__afterAnimation2, &__afterAnimation3, &__afterAnimation4, &__afterAnimation5, &__afterAnimation6
		position: absolute
		p
			position: relative
			text-transform: uppercase
			font-size: 14px
			color: white
			font-family: 'SegoeScript'
			margin: 0
	&__maquetteFront, &__maquetteBack1, &__maquetteBack2
		position: absolute
		margin: auto
		box-shadow: 0px 0px 14px 4px rgba(0,0,0,0.2)
		@media (max-width: $screen-xs-max)
			display: none
	&__maquetteFront
		bottom: 0
		left: 0
		right: 0
		z-index: 3
		margin: auto
		width: 310px
		animation: fadeInUp 1s 1 ease-out
	&__afterAnimation2
		top: -15%
		left: 36%
		animation: fadeOut 3.5s 1 ease-out
		animation-delay: -2s
		p
			right: 17px
	&__afterAnimation3
		top: -11%
		right: 11%
		animation: fadeOut 4s 1
		animation-delay: -2s
		p
			left: 15px
	&__afterAnimation4
		top: 4%
		right: -15%
		animation: fadeOut 3.8s 1 ease-out
		animation-delay: -2.5s
		p
			left: 40px
	&__maquetteBack1
		bottom: -10%
		right: 22.5%
		animation: slideInRight 1s 1 ease-out
		animation-fill-mode: backwards
	&__afterAnimation1
		top: 28%
		right: -19%
		animation: fadeOut 3s 1 ease-out
		animation-delay: -2s
		p
			font-size: 20px
			left: 25px
	&__maquetteBack2
		bottom: -10%
		left: 20%
		animation: slideInLeft 1s 1 ease-out
		animation-fill-mode: backwards
	&__afterAnimation5
		left: -27%
		bottom: 23%
		animation: fadeOut 5s 1 ease-out
		animation-delay: -2.5s
	&__afterAnimation6
		left: -27%
		bottom: 70%
		animation: fadeOut 3.3s 1 ease-out
		animation-delay: -2s
		p
			right: 55px