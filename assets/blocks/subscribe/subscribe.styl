.subscribe
	// position: absolute
	// bottom: 130px
	// right: 0
	// left: 0
	// z-index: 11
	height: 85px
	background-color: rgba(229,229,229,0.8)
	@media (max-width: $screen-phone-max)
		height: 150px
	@media (max-width: $screen-sm-min)
		bottom: 165px
	&__wrap
		display: flex
		height: 85px
		@media (max-width: $screen-phone-max)
			height: auto
			width: 100%
	&__info
		display: flex
		margin: auto
		height: 45px
		width: 600px
		@media (max-width: $screen-phone-max)
			flex-flow: column nowrap
			justify-content: flex-start
			height: auto
			margin-top: 25px
	&__title
		font-size: 16px
		margin-bottom: 0
		align-self: center
		margin-right: 35px
		text-transform: uppercase
		color: #405770
		@media (max-width: $screen-phone-max)
			margin-bottom: 15px
			margin-right: 0
	&__form
		height: 45px
		width: 415px
		position: relative
		@media (max-width: $screen-phone-max)
			height: auto
			width: 100%
	&__inputWrap
		@media (max-width: $screen-phone-max)
			width: 80%
			margin: 0 auto
			margin-right: 45px
	&__inputSearch
		height: 45px
		width: 365px
		border-radius: 4px 0 0 4px
		font-size: 13px
		border: 1px solid #e1e1e1
		box-shadow: none
		padding-left: 14px
		color: #d3d3d3
		font-style: italic
		&:focus
			border-color: #e1e1e1
			box-shadow: inset 0 1px 1px rgba(0,0,0,.075), inset 0 0 8px rgba(102, 175, 233, .6)
		@media (max-width: $screen-phone-max)
			display: block
			width: 100%
			float: right
	&__button
		position: absolute
		right: 10px
		top: 0
		height: 45px
		width: 45px
		background-color: #0082d5
		border-radius: 0 4px 4px 0
		border: none
		@media (max-width: $screen-phone-max)
			position: absolute
			right: 5px
			top: 0
			left: auto
	&__iconArrow
		svg
			position: relative
			top: 2px
			left: 1px
			path
				fill: white